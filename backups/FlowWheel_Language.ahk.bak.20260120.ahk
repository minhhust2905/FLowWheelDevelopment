; --- TRANSLATION FUNCTION ---
_t(str) {
    global cfg, LANG_MAP
    lang := (IsSet(cfg) && cfg.HasOwnProp("language")) ? cfg.language : "vi"
    if LANG_MAP.Has(lang) && LANG_MAP[lang].Has(str)
        return LANG_MAP[lang][str]
    else if LANG_MAP.Has("vi") && LANG_MAP["vi"].Has(str)
        return LANG_MAP["vi"][str]
    else
        return str
}

; --- TIME FORMATTING FUNCTION ---
FormatTimeSaved(totalSeconds) {
    hours := Floor(totalSeconds / 3600)
    minutes := Floor(Mod(totalSeconds, 3600) / 60)
    seconds := Mod(totalSeconds, 60)
    if (hours > 0)
        return hours . "h " . minutes . "m " . seconds . "s"
    else if (minutes > 0)
        return minutes . "m " . seconds . "s"
    else
        return seconds . "s"
}